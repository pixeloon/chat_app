doctype html
html
  head
    title Chat App
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    link(rel="stylesheet" href=("/stylesheets/style.css"))
  body
    #container
      #namesWrapper
        h2 Chat Room
        p Create Username:
        form#userForm
          input.form-control#user(type='text')
          input.btn.btn-default(type='submit' value='Submit')
      #mainWrapper
        h2 Chat Room
        #userWrapper
          #users
        #chatWrapper
          form#messageForm
            input.form-control#message(type='text', size='35' placeholder='Type message here ...')
            input.btn.btn-default(type='submit' value='Submit')
          hr
          #chat
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')        
    script(type="text/javascript" src="/socket.io/socket.io.js")
    script(type="text/javascript" src="/javascripts/chat.js")
  